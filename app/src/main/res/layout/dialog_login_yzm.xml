<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="258dp"
        android:layout_height="229dp"
        android:background="@drawable/yzm_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入下面安全码"
            android:textColor="@color/black"
            android:textSize="@dimen/ts_13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/login_img_code"
            android:layout_width="124dp"
            android:layout_height="41.5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/loan_logo" />
        <!--<com.loan.time.api.PhoneCode
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_img_code"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30.5dp"
            android:layout_marginLeft="15dp"/>-->
        <View
            android:id="@+id/view1"
            android:layout_width="47.25dp"
            android:layout_height="52.5dp"
            android:background="@drawable/ed_yzm_back"
            app:layout_constraintTop_toBottomOf="@+id/login_img_code"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30.5dp"
            android:layout_marginLeft="15dp"/>
        <View
            android:id="@+id/view1_ind"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/navigation_tv_true"
            app:layout_constraintStart_toStartOf="@+id/view1"
            app:layout_constraintEnd_toEndOf="@+id/view1"
            app:layout_constraintBottom_toBottomOf="@+id/view1"/>
        <TextView
            android:id="@+id/ed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_23"
            android:maxEms="1"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/view1"
            app:layout_constraintEnd_toEndOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@+id/view1"
            app:layout_constraintBottom_toBottomOf="@+id/view1"/>
        <View
            android:id="@+id/view2"
            android:layout_width="47.25dp"
            android:layout_height="52.5dp"
            android:background="@drawable/ed_yzm_back"
            app:layout_constraintTop_toBottomOf="@+id/login_img_code"
            app:layout_constraintLeft_toRightOf="@+id/view1"
            android:layout_marginTop="30.5dp"
            android:layout_marginLeft="13dp"/>
        <View
            android:id="@+id/view2_ind"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:visibility="gone"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/navigation_tv_true"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintBottom_toBottomOf="@+id/view2"/>
        <TextView
            android:id="@+id/ed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_23"
            android:textColor="@color/black"
            android:maxEms="1"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintBottom_toBottomOf="@+id/view2"/>
        <View
            android:id="@+id/view3"
            android:layout_width="47.25dp"
            android:layout_height="52.5dp"

            android:background="@drawable/ed_yzm_back"
            app:layout_constraintTop_toBottomOf="@+id/login_img_code"
            app:layout_constraintLeft_toRightOf="@+id/view2"
            android:layout_marginTop="30.5dp"
            android:layout_marginLeft="13dp"/>
        <View
            android:id="@+id/view3_ind"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:visibility="gone"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/navigation_tv_true"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="@+id/view3"
            app:layout_constraintBottom_toBottomOf="@+id/view3"/>
        <TextView
            android:id="@+id/ed3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_23"
            android:textColor="@color/black"
            android:maxEms="1"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/view3"
            app:layout_constraintBottom_toBottomOf="@+id/view3"/>
        <View
            android:id="@+id/view4"
            android:layout_width="47.25dp"
            android:layout_height="52.5dp"
            android:background="@drawable/ed_yzm_back"
            app:layout_constraintTop_toBottomOf="@+id/login_img_code"
            app:layout_constraintLeft_toRightOf="@+id/view3"
            android:layout_marginTop="30.5dp"
            android:layout_marginLeft="13dp"/>
        <View
            android:id="@+id/view4_ind"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:visibility="gone"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/navigation_tv_true"
            app:layout_constraintStart_toStartOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintBottom_toBottomOf="@+id/view4"/>
        <TextView
            android:id="@+id/ed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_23"
            android:textColor="@color/black"
            android:maxEms="1"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintTop_toTopOf="@+id/view4"
            app:layout_constraintBottom_toBottomOf="@+id/view4"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:cursorVisible="false"
            android:inputType="number"
            android:digits="@string/wx"
            app:layout_constraintStart_toStartOf="@+id/view1"
            app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintTop_toTopOf="@+id/view1"
            app:layout_constraintBottom_toBottomOf="@+id/view1"
            android:layout_centerInParent="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>