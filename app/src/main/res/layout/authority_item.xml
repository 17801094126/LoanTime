<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rv_img"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="@drawable/sms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22.5dp"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/rv_img"
        app:layout_constraintTop_toTopOf="@+id/rv_img"
        app:layout_constraintBottom_toBottomOf="@+id/rv_img"
        android:textColor="@color/c_303541"
        android:textSize="@dimen/ts_15"
        android:text="SMS"
        android:layout_marginLeft="4.5dp"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rv_img"
        app:layout_constraintStart_toStartOf="@+id/rv_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="36dp"
        android:layout_marginTop="8.5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
