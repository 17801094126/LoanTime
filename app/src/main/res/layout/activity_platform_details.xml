<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_Bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="123.5dp"
                android:background="@color/navigation_tv_true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_12"
                android:text="最高可贷（Rp）"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view1"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_33"
                android:text="5000.000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_rp"
                android:layout_marginTop="14.5dp"/>

            <View
                android:id="@+id/home_view"
                android:layout_width="0dp"
                android:layout_height="92dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/home_navigation_back"
                android:layout_marginTop="93dp"/>
            <View
                android:id="@+id/home_rililv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="@+id/home_view"
                app:layout_constraintBottom_toBottomOf="@+id/home_view"
                app:layout_constraintLeft_toLeftOf="@+id/home_view"
                app:layout_constraintRight_toLeftOf="@+id/home_jisu"/>
            <TextView
                android:id="@+id/tv_rililv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/home_rililv"
                app:layout_constraintEnd_toEndOf="@+id/home_rililv"
                app:layout_constraintTop_toTopOf="@+id/home_rililv"
                android:layout_marginTop="24dp"
                android:textSize="@dimen/ts_10"
                android:textColor="@color/c_999999"
                android:text="参考日利率"/>
            <TextView
                android:id="@+id/tv_rililv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tv_rililv"
                app:layout_constraintEnd_toEndOf="@+id/tv_rililv"
                app:layout_constraintTop_toBottomOf="@+id/tv_rililv"
                android:layout_marginTop="7dp"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ts_13"
                android:text="1.89%"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="27dp"
                android:background="@color/c_D6D7DC"
                app:layout_constraintTop_toTopOf="@+id/home_view"
                app:layout_constraintBottom_toBottomOf="@+id/home_view"
                app:layout_constraintLeft_toRightOf="@+id/home_rililv"/>
            <View
                android:id="@+id/home_jisu"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="@+id/home_view"
                app:layout_constraintBottom_toBottomOf="@+id/home_view"
                app:layout_constraintLeft_toRightOf="@+id/home_rililv"
                app:layout_constraintRight_toLeftOf="@+id/home_daikuan"/>
            <TextView
                android:id="@+id/tv_jisu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/home_jisu"
                app:layout_constraintEnd_toEndOf="@+id/home_jisu"
                app:layout_constraintTop_toTopOf="@+id/home_jisu"
                android:layout_marginTop="24dp"
                android:textSize="@dimen/ts_10"
                android:textColor="@color/c_999999"
                android:text="极速放款"/>
            <TextView
                android:id="@+id/tv_jisu_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tv_jisu"
                app:layout_constraintEnd_toEndOf="@+id/tv_jisu"
                app:layout_constraintTop_toBottomOf="@+id/tv_jisu"
                android:layout_marginTop="7dp"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ts_13"
                android:text="最快1小时下款"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="27dp"
                android:background="@color/c_D6D7DC"
                app:layout_constraintTop_toTopOf="@+id/home_view"
                app:layout_constraintBottom_toBottomOf="@+id/home_view"
                app:layout_constraintLeft_toRightOf="@+id/home_jisu"/>
            <View
                android:id="@+id/home_daikuan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="@+id/home_view"
                app:layout_constraintBottom_toBottomOf="@+id/home_view"
                app:layout_constraintRight_toRightOf="@+id/home_view"
                app:layout_constraintLeft_toRightOf="@+id/home_jisu"/>
            <TextView
                android:id="@+id/tv_cankao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/home_daikuan"
                app:layout_constraintEnd_toEndOf="@+id/home_daikuan"
                app:layout_constraintTop_toTopOf="@+id/home_daikuan"
                android:layout_marginTop="24dp"
                android:textSize="@dimen/ts_10"
                android:textColor="@color/c_999999"
                android:text="贷款期限"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tv_cankao"
                app:layout_constraintEnd_toEndOf="@+id/tv_cankao"
                app:layout_constraintTop_toBottomOf="@+id/tv_cankao"
                android:layout_marginTop="7dp"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ts_13"
                android:text="7/14"/>
            <TextView
                android:id="@+id/tv_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ts_15"
                android:text="申请权限"
                app:layout_constraintTop_toBottomOf="@+id/home_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="14.5dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/platform_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_permission"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_fangkuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/platform_rv"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ts_15"
                android:text="放款只需4步"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="26dp"/>
            <ImageView
                android:id="@+id/img_fang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_fangkuan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/fang"
                android:layout_marginTop="26dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/navigation_tv_true"
        android:textColor="@color/white"
        android:text="立即提交"
        android:textSize="@dimen/ts_16"
        android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>