<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170.5dp"
    android:id="@+id/all_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/item_back"
        android:layout_width="0dp"
        android:layout_height="163.5dp"
        android:background="@drawable/home_navigation_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="11.5dp"/>
    <ImageView
        android:id="@+id/img_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/item_back"
        app:layout_constraintStart_toStartOf="@+id/item_back"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="13.5dp"
        android:src="@color/navigation_tv_true"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_292929"
        android:textSize="@dimen/ts_14"
        android:text="小猪白卡"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toRightOf="@+id/img_item"
        app:layout_constraintTop_toTopOf="@+id/img_item"
        app:layout_constraintBottom_toBottomOf="@+id/img_item"/>
    <TextView
        android:id="@+id/tv_bt"
        android:layout_width="93.5dp"
        android:layout_height="33dp"
        android:background="@drawable/home_rv_bt_back"
        app:layout_constraintTop_toTopOf="@+id/img_item"
        app:layout_constraintBottom_toBottomOf="@+id/img_item"
        app:layout_constraintRight_toRightOf="@+id/item_back"
        android:layout_marginRight="13dp"
        android:text="Apply Now"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_13"/>
    <TextView
        android:id="@+id/tv_amuount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_item"
        app:layout_constraintStart_toStartOf="@+id/img_item"
        android:textSize="@dimen/ts_12"
        android:textColor="@color/c_999999"
        android:text="Amount"
        android:layout_marginTop="7.5dp"/>
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/ts_20"
        app:layout_constraintTop_toBottomOf="@+id/tv_amuount"
        app:layout_constraintStart_toStartOf="@id/tv_amuount"
        android:layout_marginTop="13.5dp"/>
    <TextView
        android:id="@+id/tv_Interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_amuount"
        app:layout_constraintBottom_toBottomOf="@+id/tv_amuount"
        app:layout_constraintLeft_toRightOf="@+id/tv_amuount"
        android:layout_marginLeft="116dp"
        android:textSize="@dimen/ts_12"
        android:textColor="@color/c_999999"
        android:text="Interest"/>
    <TextView
        android:id="@+id/tv_Interest_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/c_333333"
        android:textSize="@dimen/ts_12"
        app:layout_constraintTop_toTopOf="@+id/tv_price"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_Interest"
        app:layout_constraintStart_toStartOf="@id/tv_Interest"/>
    
    <View
        android:id="@+id/tv_back"
        android:layout_width="0dp"
        android:layout_height="27dp"
        app:layout_constraintStart_toStartOf="@+id/item_back"
        app:layout_constraintEnd_toEndOf="@+id/item_back"
        android:layout_marginLeft="14.5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/item_tv_back"
        android:alpha="0.05"
        app:layout_constraintBottom_toBottomOf="@+id/item_back"
        android:layout_marginBottom="13dp"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_back"
        app:layout_constraintTop_toTopOf="@+id/tv_back"
        app:layout_constraintBottom_toBottomOf="@+id/tv_back"
        app:layout_constraintEnd_toEndOf="@+id/tv_back"
        android:layout_marginRight="11.5dp"
        android:layout_marginLeft="11.5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/navigation_tv_true"
        android:textSize="@dimen/ts_12"
        android:text=""
        />
</androidx.constraintlayout.widget.ConstraintLayout>
