<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/smart"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.scwang.smart.refresh.header.WaterDropHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.scwang.smart.refresh.header.WaterDropHeader>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/home_img"
                android:layout_width="0dp"
                android:layout_height="165dp"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                android:src="@drawable/home_banner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <View
                android:id="@+id/home_view"
                android:layout_width="0dp"
                android:layout_height="92dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="11.5dp"
                android:background="@drawable/home_navigation_back"
                android:layout_marginTop="143.5dp"/>

            <View
                android:id="@+id/home_high"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="@+id/home_view"
                app:layout_constraintBottom_toBottomOf="@+id/home_view"
                app:layout_constraintLeft_toLeftOf="@+id/home_view"
                app:layout_constraintRight_toLeftOf="@+id/home_large"/>
            <ImageView
                android:id="@+id/img_high"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:src="@drawable/highpassrate"
                app:layout_constraintStart_toStartOf="@+id/home_high"
                app:layout_constraintEnd_toEndOf="@+id/home_high"
                app:layout_constraintTop_toTopOf="@+id/home_high"
                android:layout_marginTop="11.5dp"/>
            <TextView
                android:id="@+id/tv_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/img_high"
                app:layout_constraintEnd_toEndOf="@+id/img_high"
                app:layout_constraintTop_toBottomOf="@+id/img_high"
                android:layout_marginTop="7.5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_12"
                android:text="High pass rate"/>
            <View
                android:id="@+id/home_large"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="@+id/home_view"
                app:layout_constraintBottom_toBottomOf="@+id/home_view"
                app:layout_constraintLeft_toRightOf="@+id/home_high"
                app:layout_constraintRight_toLeftOf="@+id/home_quick"/>
            <ImageView
                android:id="@+id/img_large"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:src="@drawable/largeloan"
                app:layout_constraintStart_toStartOf="@+id/home_large"
                app:layout_constraintEnd_toEndOf="@+id/home_large"
                app:layout_constraintTop_toTopOf="@+id/home_large"
                android:layout_marginTop="11.5dp"/>
            <TextView
                android:id="@+id/tv_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/img_large"
                app:layout_constraintEnd_toEndOf="@+id/img_large"
                app:layout_constraintTop_toBottomOf="@+id/img_large"
                android:layout_marginTop="7.5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_12"
                android:text="Large loan"/>
            <View
                android:id="@+id/home_quick"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="@+id/home_view"
                app:layout_constraintBottom_toBottomOf="@+id/home_view"
                app:layout_constraintLeft_toRightOf="@+id/home_large"
                app:layout_constraintRight_toRightOf="@+id/home_view"/>
            <ImageView
                android:id="@+id/img_quick"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:src="@drawable/quickapproval"
                app:layout_constraintStart_toStartOf="@+id/home_quick"
                app:layout_constraintEnd_toEndOf="@+id/home_quick"
                app:layout_constraintTop_toTopOf="@+id/home_quick"
                android:layout_marginTop="11.5dp"/>
            <TextView
                android:id="@+id/tv_quick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/img_quick"
                app:layout_constraintEnd_toEndOf="@+id/img_quick"
                app:layout_constraintTop_toBottomOf="@+id/img_quick"
                android:layout_marginTop="7.5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_12"
                android:text="Quick approval"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/home_view"
                app:layout_constraintVertical_weight="1"
                tools:layout_editor_absoluteX="0dp"
                android:layout_marginTop="8.5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/home_rv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <View
                    android:layout_width="103dp"
                    android:layout_height="0.5dp"
                    android:background="#E3E3E3"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ts_11"
                    android:textColor="#B3B3B3"
                    android:text="To the end"
                    android:layout_marginRight="5.5dp"
                    android:layout_marginLeft="5.5dp"
                    android:layout_gravity="center"/>
                <View
                    android:layout_width="103dp"
                    android:layout_height="0.5dp"
                    android:background="#E3E3E3"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
</com.scwang.smart.refresh.layout.SmartRefreshLayout>